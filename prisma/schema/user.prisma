enum UserRole {
  ADMIN
  USER
}
model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sessions      Session[]
  accounts      Account[]
  posts         Post[]
  comments      Comment[]
  savedPosts SavedPost[]
  role   String  @default("USER")
  status String? @default("ACTIVE")
  phone  String?

  @@unique([email])
  @@map("user")
}


